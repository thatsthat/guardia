generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("VITE_DATABASE_URL_TAGGED")
}

model Chapter {
  id              Int       @id @default(autoincrement())
  aired           DateTime
  summary         String
  transcription   String
  audio           String
  url             String
  title           String    @db.VarChar(255)
  tags            Tag[] 

}

model Tag {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  chapters  Chapter[] 
}