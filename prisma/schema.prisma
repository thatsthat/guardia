generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("VITE_DATABASE_URL_TAGGED")
}

model Chapter {
  id            Int      @id @default(autoincrement())
  aired         DateTime
  summary       String
  url           String
  title         String   @db.VarChar(255)
  transcription String
  audio         String
  tags          Tag[]    @relation("ChapterToTag")
}

model Tag {
  id                    Int           @id @default(autoincrement())
  name                  String        @unique
  chapters              Chapter[]     @relation("ChapterToTag")
  active_in_sessions    Session[]     @relation("SessionToTag")
}

model Session {
  id            Int     @id @default(autoincrement())
  session_uid   String  @unique
  tags          Tag[]   @relation("SessionToTag")
}